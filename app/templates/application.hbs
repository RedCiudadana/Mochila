      <div class="suscribe">
        {{#bs-form model=login novalidate=true as |form|}}
          {{#form.element placeholder="Email" property="email" as |el|}}
            <div class="input-group">
              <div class="input-group-prepend">
                <span class="input-group-text">
                  <img
                    src="img/icono-correo.png"
                    alt="Icono de un paquete de correo">
                </span>
              </div>
              <input value={{el.value}} class="form-control" placeholder="Email" oninput={{action (mut el.value) value="target.value"}} onchange={{action (mut el.value) value="target.value"}} id={{el.id}} type="text">
            </div>
          {{/form.element}}
          {{bs-button defaultText="Suscríbete" type="secondary" buttonType="submit"}}
        {{/bs-form}}
      </div>
      {{!-- Background --}}
      <img src="img/banner-xs.png" class="background d-md-none">
