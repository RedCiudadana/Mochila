<main class="container py-5 text-center">
  <h4 class="mb-5">Elige la herramienta que desees explorar</h4>
  <div class="row">
    {{#each model as |tool|}}
      <div class="col-12 col-md-4">
        <a href={{tool.url}} target="_blank">
          <div class="card shadow text-center my-2">
            <img src={{asset-map (concat "img/herramientas/" tool.img ".png")}} alt={{tool.imgAlt}} class="mx-auto">
            <h5>{{tool.title}}</h5>
            <div class="overlay">
              <h5>{{tool.title}}</h5>
              <p>{{tool.description}}</p>
              </div>
          </div>
        </a>
      </div>
    {{/each}}    
  </div>
</main>

